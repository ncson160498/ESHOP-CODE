<section id="cart_items">
		<div class="container">
			<div class="breadcrumbs">
				<ol class="breadcrumb">
				  <li><a href="/">Trang chủ</a></li>
				  <li class="active">Giỏ hàng</li>
				</ol>
			</div>
			<div class="table-responsive cart_info">				
				<table class="table table-condensed">
					<thead>
						<tr class="cart_menu">
							<td class="image">Sản phẩm</td>
							<td class="description"></td>
							<td class="price">Giá tiền</td>
							<td class="quantity">Số lượng</td>
							<td class="total">Tổng</td>
							<td></td>
						</tr>
					</thead>			
					<tbody>
						{{# if products }}
							{{#each products }}	
						<tr>										
							
							<td class="cart_product">
								<a href="/product/detail/{{this.item.id}}"><img src="/img/upload/{{ this.item.image}}" height="100" width="100"></a>
							</td>
							<td class="cart_description">
								<h4><a href="/product/detail/{{this.item.id}}">{{ this.item.name }}</a></h4>
								{{!-- <p>Web ID: 1089772</p> --}}
							</td>
							<td class="cart_price">
								<p>{{this.item.price}} VND</p>
							</td>
							<td class="cart_quantity">
								<div class="cart_quantity_button">
									<a class="cart_quantity_up" href="/removeQuatity/{{this.item.id}}"> - </a>
									<input class="cart_quantity_input" type="text" name="quantity" value="{{this.quantity}}" autocomplete="off" size="3">
									<a class="cart_quantity_down" href="/addQuatity/{{this.item.id}}"> + </a>
								</div>
							</td>

							<td class="cart_total">
								<p class="cart_total_price">{{this.price}}</p>
							</td>
							<td class="cart_delete">
								<a class="cart_quantity_delete" href="/remove/{{this.item.id}}"><i class="fa fa-times"></i></a>
							</td>
								

						</tr>
						{{/each}}


						<tr>
							<td colspan="4">&nbsp;</td>
							<td colspan="2">
								<table class="table table-condensed total-result">
									<tbody>
										<tr>
											<td>Tổng</td>
											<td><span>{{totalPrice}} VND</span></td>
										</tr>
									</tbody>
								</table>
							</td>
						</tr>
						{{ else }}
							Your shopping cart is empty.					
						{{/if}}
					</tbody>
				</table>
				
				<div class="text-right">
					<a href="/checkout" type="button" class="btn btn-success">Checkout</a>
				</div>
			</div>
		</div>
	</section>

