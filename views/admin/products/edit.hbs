<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-sm-11">
                <h6 class="m-0 font-weight-bold text-primary">Edit Product</h6>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div style="overflow: hidden;" class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <form>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Id</label>
                        <input type="text" disabled class="form-control" id="exampleInputId" aria-describedby="emailHelp"
                            name="name" value="{{id}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Name</label>
                        <input type="text" class="form-control" id="exampleInputName" aria-describedby="emailHelp"
                            name="name" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Quanlity</label>
                        <input type="quanlity" class="form-control" id="exampleInputQuanlity" name="quanlity" value="{{quanlity}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Size</label>
                        <input type="number" class="form-control" id="exampleInputSize" name="size" value="{{size}}">
                    </div>
                      <div class="form-group">
                        <label for="exampleInputPassword1">Price</label>
                        <input type="number" class="form-control" id="exampleInputPrice" name="price" value="{{price}}">
                    </div>


                    <div class="form-group">
                        <label for="exampleInputPassword1">Category</label>                 
                        <select name="category" id="categorySelected" class="form-select" aria-label="Default select example">
                            <option selected value="{{idCate}}">{{nameCate}}</option>
                            {{#each dataCategory}}
                            <option value="{{id}}">{{name}}</option>
                            {{/each}}
                        </select>

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">TradeMark</label>
                        <select name="category" id="trademarkSelected" class="form-select" aria-label="Default select example">
                            <option selected value="{{idTrade}}">{{nameTrade}}</option>
                            {{#each dataTrademark}}
                            <option value="{{id}}">{{name}}</option>
                            {{/each}}
                        </select>
                    </div>                   
                    <button type="button" class="btn btn-primary" id="editProductAdmin"  value="Update">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/admin/js/product.js"></script>
